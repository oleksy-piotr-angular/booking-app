{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/spec",
    "types": ["jasmine", "node"],

    // keep your shared‐lib alias here too
    "paths": {
      "@booking-app/auth-token": ["../../libs/auth-token/src/public-api.ts"]
    }
  },
  // point at your harness + let include pick up all .spec.ts
  "files": ["src/polyfills.ts", "src/test.ts"],
  "include": ["src/**/*.spec.ts", "src/**/*.d.ts", "../../libs/**/*"],
  "exclude": [] // ← override and clear out the app excludes
}
